<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Distance">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hikingBackground3">

        <TextView
            android:id="@+id/introText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/locationIntro"
            android:gravity="start"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="10sp"
            android:textStyle="bold"
            android:textColor="@color/hikingTextColor"/>

        <TextView
            android:id="@+id/currentLong"
            android:layout_below="@+id/introText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/distanceResult"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:textColor="@color/hikingTextColor"/>

        <TextView
            android:id="@+id/currentLat"
            android:layout_below="@+id/currentLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/distanceResult"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:textColor="@color/hikingTextColor"/>

        <TextView
            android:id="@+id/currentLoc"
            android:layout_below="@+id/currentLat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/locationText"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:textColor="@color/hikingTextColor"/>

        <TextView
            android:id="@+id/homeText"
            android:layout_below="@+id/currentLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addressText"
            android:gravity="start"
            android:textSize="20sp"
            android:layout_marginTop="15sp"
            android:layout_marginHorizontal="10sp"
            android:textStyle="bold"
            android:textColor="@color/hikingTextColor"/>

        <EditText
            android:id="@+id/inputText"
            android:layout_below="@+id/homeText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/inputText"
            android:layout_marginHorizontal="20sp"/>

        <Button
            android:id="@+id/enterTextButton"
            android:text="ENTER"
            android:layout_below="@+id/inputText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center"
            android:padding="1sp"
            android:background="@drawable/rounded0"
            android:textColor="@color/hikingTextColor"/>

        <TextView
            android:id="@+id/distanceText"
            android:layout_below="@+id/enterTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the total distance:"
            android:gravity="left"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:textColor="@color/hikingTextColor"
            android:layout_marginHorizontal="10sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/distance"
            android:layout_below="@+id/distanceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/distanceResultCalc"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="10sp"
            android:textColor="@color/hikingTextColor"/>

        <Button
            android:id="@+id/backButton"
            android:text="@string/back"
            android:layout_below="@+id/distance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center"
            android:padding="1sp"
            android:background="@drawable/rounded0"
            android:textColor="@color/hikingTextColor"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>