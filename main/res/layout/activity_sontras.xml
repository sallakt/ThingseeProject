<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_indoor"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:gravity="left"
        android:paddingLeft="0dp"
        android:text="This is Text View 1."
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView android:id="@+id/weatherDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textView1"
        android:layout_alignStart="@id/textView1"
        android:text="Weather description"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <Button

        android:id="@+id/goBackButton"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView1"
        android:layout_alignTop="@+id/optionsButton"
        android:layout_gravity="center"
        android:text="@string/back" />


    <TextView
        android:id="@+id/indoorTemp"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView1"
        android:layout_alignTop="@+id/outdoorTemp"
        android:gravity="left"
        android:padding="6dp"
        android:text="temp"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/indoorHumid"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView1"
        android:layout_centerVertical="true"
        android:gravity="left"
        android:padding="6dp"
        android:text="humidity"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView

        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/textView6"
        android:gravity="left"
        android:padding="6dp"
        android:text="Indoor Temperature"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView

        android:id="@+id/textView6"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginBottom="166dp"
        android:gravity="left"
        android:padding="6dp"
        android:text="Outdoor Temperature"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/outdoorTemp"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="118dp"
        android:layout_marginStart="44dp"
        android:gravity="left"
        android:padding="6dp"
        android:text="temp"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/outdoorHumidity"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/outdoorTemp"
        android:layout_centerVertical="true"
        android:gravity="left"
        android:padding="6dp"
        android:text="humidity"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <TextView

        android:id="@+id/textView5"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/indoorHumid"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        android:gravity="left"
        android:padding="6dp"
        android:text="Indoor Humidity"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView

        android:id="@+id/textView"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/indoorHumid"
        android:layout_alignStart="@+id/textView1"
        android:gravity="left"
        android:padding="6dp"
        android:text="Outdoor Humidity"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/optionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/openMapButton"
        android:layout_gravity="center"
        android:layout_marginEnd="133dp"
        android:text="@string/optionsButton" />

        <Button
            android:id="@+id/openMapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="14dp"
            android:text="@string/openMapButton" />


</RelativeLayout>